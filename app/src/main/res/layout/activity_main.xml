<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.licytacik.foodfront.Main"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button"
                        android:layout_margin="@dimen/button_margin"
                        android:id="@+id/search"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:id="@+id/imageView"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/szukaj"
                                android:layout_marginBottom="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Szukaj"
                                android:id="@+id/textView"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button"
                        android:layout_margin="@dimen/button_margin"
                        android:id="@+id/consume"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" >

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:id="@+id/imageView2"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/konsumuj"
                                android:layout_marginBottom="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Konsumuj"
                                android:id="@+id/textView2"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button"
                        android:layout_margin="@dimen/button_margin"
                        android:layout_column="0"
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="1"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" >

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:id="@+id/imageView3"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ustawienia"
                                android:layout_marginBottom="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ustawienia"
                                android:id="@+id/textView3"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button"
                        android:layout_margin="@dimen/button_margin"
                        android:layout_rowSpan="1"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="1"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" >

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:id="@+id/imageView4"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/zarzadzaj"
                                android:layout_marginBottom="40dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zarządzaj"
                                android:id="@+id/textView4"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/text">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Opcja 1"
                    android:id="@+id/button4"
                    android:background="@drawable/flat_button"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Opcja 2"
                    android:id="@+id/button5"
                    android:background="@drawable/flat_button"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Wyloguj"
                    android:id="@+id/button"
                    android:background="@drawable/flat_button"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back1"
            android:id="@+id/login_form"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/foodfront"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/editText3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/text"
                android:layout_marginBottom="30dp"
                android:hint="Login"
                android:paddingLeft="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/editText4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/text"
                android:hint="Hasło"
                android:layout_marginBottom="40dp"
                android:paddingLeft="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zaloguj"
                android:id="@+id/login"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rejestraca"
                android:id="@+id/button2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button"
                android:layout_marginBottom="10dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dla firm"
                android:id="@+id/button3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button"
                android:layout_marginBottom="30dp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
